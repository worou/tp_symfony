{% extends 'base.html.twig' %}

{% block titre %}
List des commentaires de l'article: {{article.titre|title}}
{% endblock %}

{% block body %}
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Auteur</th>
            <th scope="col">Commenataire</th>
        </tr>
    </thead>
    
    <tbody>
        {% for comment in commentaires %}
        <tr>
            <td>{{comment.id}}</td>
            <td>{{comment.auteur|capitalize}}</td>
            <td>{{comment.message}}</td>  
        </tr>
        {% endfor %}
    </tbody>
    </table>
    <a class="btn btn-warning" href="{{path('article_list')}}">Articles</a>
    {% endblock %}